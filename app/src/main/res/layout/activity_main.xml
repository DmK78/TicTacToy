<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switchEnemy"
        style="@style/TicTacToeSwithcerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:onClick="switchEnemy"
        android:padding="5dp"
        android:text="@string/switch_enemy_pc_human" />

    <Switch
        android:id="@+id/switchPcSmart"
        style="@style/TicTacToeSwithcerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_pc_dummy_smart" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button11"
            style="@style/TicTacToeButton" />

        <Button
            android:id="@+id/button12"
            style="@style/TicTacToeButton" />

        <Button
            android:id="@+id/button13"
            style="@style/TicTacToeButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button21"
            style="@style/TicTacToeButton" />

        <Button
            android:id="@+id/button22"
            style="@style/TicTacToeButton" />

        <Button
            android:id="@+id/button23"
            style="@style/TicTacToeButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button31"
            style="@style/TicTacToeButton" />

        <Button
            android:id="@+id/button32"
            style="@style/TicTacToeButton" />

        <Button
            android:id="@+id/button33"
            style="@style/TicTacToeButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="newGame"
            android:text="@string/button_new_game" />
    </LinearLayout>

</LinearLayout>