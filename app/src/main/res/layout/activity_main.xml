<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Switch
            android:id="@+id/switchEnemy"
            style="@style/TicTacToeSwithcerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="sans-serif-black"
            android:onClick="switchEnemy"
            android:layout_marginBottom="8dp"
            android:text="@string/switch_enemy_pc_human"
            android:textColor="@android:color/background_light" />

        <Switch
            android:id="@+id/switchPcSmart"
            style="@style/TicTacToeSwithcerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/title_pc_dummy_smart"
            android:textColor="@android:color/background_light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button11"
                style="@style/TicTacToeButton"
                android:textColor="@android:color/transparent"
                android:background="#00000000"
                />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"

                android:background="@android:color/black" />

            <Button
                android:id="@+id/button12"
                android:background="#00000000"
                android:textColor="@android:color/transparent"
                style="@style/TicTacToeButton" />
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/button13"
                android:background="#00000000"
                android:textColor="@android:color/transparent"
                style="@style/TicTacToeButton" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button21"
                android:background="#00000000"
                android:textColor="@android:color/transparent"
                style="@style/TicTacToeButton" />
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/button22"
                android:background="#00000000"
                android:textColor="@android:color/transparent"
                style="@style/TicTacToeButton" />
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/button23"
                android:background="#00000000"
                android:textColor="@android:color/transparent"
                style="@style/TicTacToeButton" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button31"
                android:background="#00000000"
                android:textColor="@android:color/transparent"
                style="@style/TicTacToeButton" />
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/button32"
                android:background="#00000000"
                android:textColor="@android:color/transparent"
                style="@style/TicTacToeButton" />
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/button33"
                android:background="#00000000"
                android:textColor="@android:color/transparent"

                style="@style/TicTacToeButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonNewGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="#20000000"
                android:text="@string/button_new_game" />
        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxMusic"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:checked="true"
        android:onClick="switchMusic"
        android:text="Music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


</android.support.constraint.ConstraintLayout>